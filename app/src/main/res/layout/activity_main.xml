<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
       android:layout_marginTop="20dp"
       >
       <androidx.cardview.widget.CardView
           android:layout_width="80dp"
           android:layout_height="140dp"
           app:cardElevation="5dp"
           android:id="@+id/add_class"
           android:layout_weight="1"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="20dp"
           app:cardUseCompatPadding="true"
           android:background="#f5f5f5"


           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:gravity="center"



               >
               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="100dp"
                   android:src="@drawable/aaa"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Add Classes"
                   android:textColor="#000000"
                   android:textStyle="bold"
                   android:fontFamily="@font/alice"


                   />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="80dp"
           android:layout_height="140dp"
           app:cardElevation="5dp"
           android:layout_weight="1"
           android:id="@+id/empty_room"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="30dp"
           app:cardUseCompatPadding="true"



           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:gravity="center"

               >
               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="100dp"
                   android:src="@drawable/emptyroom"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Empty Rooms"
                   android:textStyle="bold"
                   android:textColor="#000000"
                   android:fontFamily="@font/alice"



                   />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="140dp"
            app:cardElevation="5dp"
            android:id="@+id/add_class_all"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:cardUseCompatPadding="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hass"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classes Info"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/alice"


                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="140dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:id="@+id/empty_room_all"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            app:cardUseCompatPadding="true"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/roomnfo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Info"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/alice"


                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="160dp"
            app:cardElevation="5dp"
            android:id="@+id/teacher_exam_routine"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:cardUseCompatPadding="true"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/exr"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Exam Routine"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:gravity="center"
                    android:textColor="#000000"

                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="160dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:id="@+id/exam_routine"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            app:cardUseCompatPadding="true"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/exr"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Exam Routine"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/alice"


                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="140dp"
            app:cardElevation="5dp"
            android:id="@+id/add_notification"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:cardUseCompatPadding="true"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/notify"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Notification"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"

                    android:textColor="#000000"

                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"

            />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>


